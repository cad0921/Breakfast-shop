                            <thead>
                                <tr><th>#</th><th>名稱</th><th class="text-end">價格</th><th>成分</th><th>限量</th><th>上架</th><th>操作</th></tr>
                            </thead>
                            <tbody id="itemsBody"></tbody>
                        </table>
                    </div>
